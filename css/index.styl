@import 'reset'
@import 'clearfix'

$have-border = #567
$have-background = #abc
$have-day = #dde7ee
$need-border = #aaa
$need-background = #d6d6d6
$need-day = #eee

global-reset()

body
  color: #333

.header
  background: #eee
  padding: 10px
  border-bottom:1px solid #ddd
  margin-bottom:20px;
  clearfix()

  h1
    float: left
    font-size: 26px
    letter-spacing: -1px
    font-weight: bold
    margin-right:8px

  h2
    padding-top: 12px
    float: left

.container
  max-width: 960px
  margin: 0 auto
  padding: 0 20px

.calendar
  counter-reset: li

  li
    box-sizing: border-box
    padding: 5px
    font-size: 14px
    float: left
    width: 33.333333333%
    position: relative
    overflow:hidden

    a
      background-size: 100%
      background-repeat: no-repeat
      display: block
      position:relative
      border: 1px solid $have-border
      border-radius: 4px
      height: 120px
      overflow: hidden

    &.need a
      border-color: $need-border

      span
        background: $need-background

    &.need:before
      background: $need-day
      border-color: $need-border
    
    span
      background: $have-background
      border-top:1px solid rgba(255,255,255,.4)
      box-sizing: border-box
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      padding: 5px
      text-align: center
      font-size: 12px
      border-bottom-left-radius: 2px
      border-bottom-right-radius: 2px
      color: #111
      text-shadow: 0 1px 0 rgba(255,255,255,.6)

    img
      max-width:100%
      border-radius:4px

    &:before
      content:counter(li)
      counter-increment: li
      position: absolute
      right: 6px
      top: 6px
      background: $have-day
      padding: 5px
      border: 1px solid $have-border
      border-top: none
      border-right: none
      border-bottom-left-radius: 4px
      border-top-right-radius: 3px
      z-index: 2


@media (min-width: 420px)
  .calendar li
    width: 25%

  .header h1
    font-size: 32px

@media (min-width: 550px)
  .calendar li
    width: 20%

@media (min-width: 700px)
  .calendar li
    width: 14%
    
    a
      padding-top:5%
      padding-bottom:5%


    &:first-child
      margin-left: 70%
