@import 'reset'
@import 'clearfix'

global-reset()

body
  color: #333

.header
  background: #eee
  padding: 20px
  border-bottom:1px solid #ddd
  margin-bottom:20px;
  clearfix()

  h1
    float: left
    font-size: 32px
    font-weight: bold
    margin-right:8px

  h2
    padding-top: 12px
    float: left

@media (min-width: 480px)
  .container
    max-width: 768px
    margin: 0 auto

  .calendar
    counter-reset: li

    li
      box-sizing: border-box
      border: 1px solid #aaa
      padding: 5px
      font-size: 14px
      float: left
      width: 14%
      position:relative
      height: 100px
      border-radius: 4px
      
      span
        background: rgba(255,255,255,.45)
        box-sizing: border-box
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        padding: 5px
        text-align: center

      img
        max-width: 100%
        max-height: 80%

      &:first-child
        margin-left:70%

      &:before
        content:counter(li)
        counter-increment: li
        position: absolute
        right: 0
        top: 0
        background: #eee
        padding: 5px
        border: 1px solid #aaa
        border-top: none
        border-right: none
        border-bottom-left-radius: 4px
        border-top-right-radius: 4px
